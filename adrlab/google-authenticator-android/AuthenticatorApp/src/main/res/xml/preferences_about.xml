<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <Preference
    android:key="version"
    android:title="@string/version_preference_title"
    android:persistent="false"
    android:enabled="false"
    android:shouldDisableView="false"/>
  <PreferenceScreen
    android:key="opensource"
    android:title="@string/opensource_preference_title">
    <intent
      android:action="android.intent.action.VIEW"
      android:data="@string/opensource_page_url" />
  </PreferenceScreen>
  <PreferenceScreen
    android:key="terms"
    android:title="@string/terms_preference_title">
    <intent
      android:action="android.intent.action.VIEW"
      android:data="@string/terms_page_url" />
  </PreferenceScreen>
  <PreferenceScreen
    android:key="privacy"
    android:title="@string/privacy_preference_title">
    <intent
      android:action="android.intent.action.VIEW"
      android:data="@string/privacy_page_url" />
  </PreferenceScreen>
</PreferenceScreen>
